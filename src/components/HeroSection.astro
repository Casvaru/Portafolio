---
import style from '../components/Index.module.css'
import styleBtn from '../components/Buttons/Buttons.module.css'
import {
  LogoLinkedin,
  MailSVG,
  LogoGitHub,
  LogoInstagram,
  LogoBehance, 
  LogoTwitch,
  LogoThreads,
LogoTwitterX} from '../components/Icons'
---
<section class={style.containerSection}>
  <h2 class={style.title}><span class={style.titleDeveloper}>Desarrollador</span><span class={style.titleDesigner}>Diseñador</span> <span class={style.titleFrontend}>frontend</span></h2>
  <div class={style.containerName}>
    <div class={style.textName}>
      <h1 class={style.name}>Carlos Andrés Segura</h1>
    </div>
  </div>
  <h2 class={style.slogan}>Diseño UI | Accesibilidad | Diseño UX </h2>
  <div class={style.containerSocial}>
    <a aria-label="Enlace de Twitch" target="_blank" href="https://www.twitch.tv/casvaru"><LogoTwitch/></a>
    <a aria-label="Enlace de linkedin" target="_blank" href="https://www.linkedin.com/in/casvaru/"><LogoLinkedin/></a>
    <a aria-label="Enlace de Github" target="_blank" href="https://github.com/Casvaru/"><LogoGitHub/></a>
    <a aria-label="Enlace de Instagram" target="_blank" href="https://www.instagram.com/casvaru/"><LogoInstagram/></a>
    <a aria-label="Enlace de Behance" target="_blank" href="https://www.behance.net/casvaru"><LogoBehance/></a>
    <a aria-label="Enlace de Threads" target="_blank" href="https://www.threads.net/casvaru"><LogoThreads/></a>
    <a aria-label="Enlace de Threads" target="_blank" href="https://twitter.com/Casvaru"><LogoTwitterX/></a>
  </div>
  <div class={style.containerBtn}>
    <a
    class={styleBtn.btnMain}
    href="mailto:carlosandres.segurac@gmail.com"
    aria-label="Ponte en contacto conmigo desde correo."
    >Ponte en contacto<span class={style.logoLink}><MailSVG/></span></a>
  </div>
</section>